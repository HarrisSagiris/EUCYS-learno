                            "Learn Faster and Remember Longer with AI",
                            "Turn Documents into Knowledge with One Click"
                        ];
                        
                        const titleElement = document.getElementById('dynamic-title');
                        let currentIndex = 0;
                        let isAnimating = false;
                        
                        function animateTitle() {
                            if (isAnimating) return;
                            isAnimating = true;
                            
                            // Get current title
                            const currentTitle = titles[currentIndex];
                            const nextIndex = (currentIndex + 1) % titles.length;
                            const nextTitle = titles[nextIndex];
                            
                            // Add a subtle fade effect
                            titleElement.style.transition = 'opacity 0.5s ease';
                            titleElement.style.opacity = '0.6';
                            
                            setTimeout(() => {
                                // Backspace effect with slower speed
                                let charIndex = currentTitle.length;
                                const backspaceInterval = setInterval(() => {
                                    if (charIndex > 0) {
                                        charIndex--;
                                        titleElement.textContent = currentTitle.substring(0, charIndex);
                                    } else {
                                        clearInterval(backspaceInterval);
                                        
                                        // Small pause before typing the next title
                                        setTimeout(() => {
                                            // Type next title with slower, more natural typing speed
                                            let typeIndex = 0;
                                            titleElement.style.opacity = '1';
                                            
                                            const typeInterval = setInterval(() => {
                                                if (typeIndex <= nextTitle.length) {
                                                    titleElement.textContent = nextTitle.substring(0, typeIndex);
                                                    typeIndex++;
                                                    
                                                    // Add variable typing speed for more natural effect
                                                    if (Math.random() > 0.8) {
                                                        clearInterval(typeInterval);
                                                        setTimeout(() => {
                                                            const newTypeInterval = setInterval(() => {
                                                                if (typeIndex <= nextTitle.length) {
                                                                    titleElement.textContent = nextTitle.substring(0, typeIndex);
                                                                    typeIndex++;
                                                                } else {
                                                                    clearInterval(newTypeInterval);
                                                                    currentIndex = nextIndex;
                                                                    isAnimating = false;
                                                                }
                                                            }, 70);
                                                        }, 100);
                                                    }
                                                } else {
                                                    clearInterval(typeInterval);
                                                    currentIndex = nextIndex;
                                                    isAnimating = false;
                                                }
                                            }, 70); // Slower typing speed
                                        }, 400); // Pause before typing
                                    }
                                }, 50); // Slower backspace speed
                            }, 500); // Initial pause before starting animation
                        }
                        
                        // Change title every 8 seconds (longer duration for better readability)
                        setInterval(animateTitle, 8000);
                        
                        // Add cursor blink effect
                        const cursorElement = document.createElement('span');
                        cursorElement.className = 'typing-cursor';
                        titleElement.parentNode.insertBefore(cursorElement, titleElement.nextSibling);
                        
